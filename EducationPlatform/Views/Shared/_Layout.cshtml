<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EducationPlatform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EducationPlatform.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lalezar&display=swap" rel="stylesheet">
</head>
<body>
    <header class="navbar flex-column flex-md-row bd-navbar" style="height:10%; width:100%">
        <div>
            <button type="button" class="btn btn-outline-light ms-3 me-3" id="Button">Главная</button>
        </div>
        <h1 class="main-logo-text">
            Образовательная платформа
        </h1>
        <div class="RegSign">
            <button type="button" class="btn btn-outline-light me-3" id="Button">Войти</button>
            <button type="button" class="btn btn-outline-light me-3" id="Button" data-bs-toggle="modal" data-bs-target="#exampleModal">Регистрация</button>

        </div>
        <!-- ModalRegister -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Регистрация</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @model Registration
                        <form method="post" asp-controller="Home" asp-action="Send">
                            <input asp-for="Name" type="text" placeholder="Имя" class="form-control mb-2" />
                            <span asp-validation-for="Name"></span>
                            <input asp-for="SecondName" type="text" placeholder="Фамилия" class="form-control mb-2" />
                            <span asp-validation-for="SecondName"></span>
                            <input asp-for="Email" type="email" placeholder="Электронная почта" class="form-control mb-2" />
                            <span asp-validation-for="Email"></span>
                            <input asp-for="Password" type="password" placeholder="Пароль" class="form-control mb-2" />
                            <span asp-validation-for="Password"></span>
                            <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </header>
   <main>
       @RenderBody()
   </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>
